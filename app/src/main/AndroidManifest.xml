<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cnodejs.android.md">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="org.cnodejs.android.md.app.AppController"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="org.cnodejs.android.md.activity.LaunchActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.FitsStatusBar.TranslucentNavigation"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.cnodejs.android.md.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.FitsStatusBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.QrCodeActivity"
            android:label="@string/open_qrcode"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.TopicActivity"
            android:label="@string/topic"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.NewTopicActivity"
            android:label="@string/new_topic"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="org.cnodejs.android.md.activity.MarkdownPreviewActivity"
            android:label="@string/markdown_preview"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.UserDetailActivity"
            android:label="@string/user_detail"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.NotificationActivity"
            android:label="@string/notification"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.SettingActivity"
            android:label="@string/setting"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.ModifyTopicSignActivity"
            android:label="@string/modify_topic_sign"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.AboutActivity"
            android:label="@string/about"
            android:theme="@style/AppTheme.FitsStatusBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.LicenseActivity"
            android:label="@string/open_source_license"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="org.cnodejs.android.md.activity.CrashLogActivity"
            android:label="@string/app_crash"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize" />

    </application>

</manifest>
